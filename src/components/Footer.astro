---
const currentYear = new Date().getFullYear();

const footerLinks = {
  project: [
    { href: 'https://github.com/brewos-io', label: 'GitHub', external: true },
    { href: 'https://github.com/brewos-io/firmware/releases', label: 'Releases', external: true },
    { href: 'https://github.com/brewos-io/firmware/blob/main/CONTRIBUTING.md', label: 'Contributing', external: true },
    { href: '/partnerships', label: 'Partnerships', external: false },
  ],
  resources: [
    { href: '/about', label: 'About', external: false },
    { href: '/getting-started', label: 'Getting Started', external: false },
    { href: '/faq', label: 'FAQ', external: false },
    { href: 'https://github.com/brewos-io/firmware/blob/main/SETUP.md', label: 'Documentation', external: true },
    { href: 'https://github.com/brewos-io/firmware/blob/main/docs/hardware/Specification.md', label: 'Hardware Spec', external: true },
    { href: 'https://github.com/brewos-io/firmware/issues', label: 'Report Issue', external: true },
  ],
  community: [
    { href: 'https://github.com/brewos-io/firmware/discussions', label: 'Discussions', external: true },
    { href: 'https://github.com/brewos-io/firmware/blob/main/TESTERS.md', label: 'Beta Testers', external: true },
    { href: 'https://github.com/brewos-io/firmware/blob/main/CODE_OF_CONDUCT.md', label: 'Code of Conduct', external: true },
  ],
  legal: [
    { href: '/privacy', label: 'Privacy Policy', external: false },
    { href: '/terms', label: 'Terms of Service', external: false },
  ],
};
---

<footer role="contentinfo">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <img 
          src="/assets/1080/horizontal/full-color/Brewos-1080.png" 
          alt="BrewOS - Open source espresso machine firmware" 
          width="200"
          height="60"
          loading="lazy"
        />
        <p>
          Open-source firmware for espresso machine control. Built with passion
          by coffee enthusiasts around the world.
        </p>
      </div>
      <div class="footer-column">
        <h4>Project</h4>
        <ul role="list">
          {footerLinks.project.map(link => (
            <li role="listitem">
              <a 
                href={link.href} 
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >
                {link.label}
                {link.external && (
                  <span class="sr-only"> (opens in new tab)</span>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div class="footer-column">
        <h4>Resources</h4>
        <ul role="list">
          {footerLinks.resources.map(link => (
            <li role="listitem">
              <a 
                href={link.href} 
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >
                {link.label}
                {link.external && (
                  <span class="sr-only"> (opens in new tab)</span>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div class="footer-column">
        <h4>Community</h4>
        <ul role="list">
          {footerLinks.community.map(link => (
            <li role="listitem">
              <a 
                href={link.href} 
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >
                {link.label}
                {link.external && (
                  <span class="sr-only"> (opens in new tab)</span>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div class="footer-column">
        <h4>Legal</h4>
        <ul role="list">
          {footerLinks.legal.map(link => (
            <li role="listitem">
              <a 
                href={link.href} 
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >
                {link.label}
                {link.external && (
                  <span class="sr-only"> (opens in new tab)</span>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p>© {currentYear} BrewOS — Apache 2.0 + Commons Clause</p>
      <div class="social-links" role="list">
        <a 
          href="https://github.com/brewos-io/firmware" 
          target="_blank" 
          rel="noopener noreferrer"
          aria-label="Visit BrewOS on GitHub (opens in new tab)"
          role="listitem"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    padding: 80px 0 40px;
    background: var(--coffee-900);
    color: var(--cream-400);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1fr;
    gap: 48px;
    margin-bottom: 60px;
  }

  .footer-brand img {
    height: 48px;
    margin-bottom: 20px;
    filter: brightness(0) invert(1);
  }

  .footer-brand p {
    font-size: 0.95rem;
    line-height: 1.7;
    max-width: 280px;
  }

  .footer-column h4 {
    color: var(--white);
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 20px;
  }

  .footer-column ul {
    list-style: none;
  }

  .footer-column a {
    color: var(--cream-400);
    text-decoration: none;
    font-size: 0.95rem;
    display: block;
    padding: 8px 0;
    transition: color 0.2s;
  }

  .footer-column a:hover {
    color: var(--white);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom p {
    font-size: 0.9rem;
  }

  .social-links {
    display: flex;
    gap: 16px;
  }

  .social-links a {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--cream-400);
    transition: all 0.2s;
  }

  .social-links a:hover {
    background: var(--accent);
    color: var(--white);
  }

  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 24px;
      text-align: center;
    }
  }
</style>

